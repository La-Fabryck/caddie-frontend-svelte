{
	"name": "caddie-frontend-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "concurrently -n \"VITE,SVELTE-CHECK\" -c \"blue,green\" \"npm run dev:vite\" \"npm run dev:watch\"",
		"dev:vite": "vite dev",
		"dev:watch": "npm run check -- --watch",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"format": "npm run format:svelte && npm run format:eslint",
		"format:svelte": "prettier --write \"**/*.svelte\"",
		"format:eslint": "eslint --fix .",
		"lint": "npm run lint:svelte && npm run lint:eslint",
		"lint:svelte": "prettier --check \"**/*.svelte\"",
		"lint:eslint": "eslint .",
		"test": "npm run test:unit -- --run"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@internationalized/date": "^3.11.0",
		"@lucide/svelte": "^0.563.1",
		"@sveltejs/adapter-node": "^5.5.2",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^24",
		"@typescript-eslint/parser": "^8.54.0",
		"@vitest/browser-playwright": "^4.0.18",
		"bits-ui": "^2.15.5",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-svelte": "^3.14.0",
		"formsnap": "^2.0.1",
		"globals": "^17.3.0",
		"playwright": "^1.58.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.49.1",
		"svelte-check": "^4.3.6",
		"sveltekit-superforms": "^2.29.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2"
	}
}
