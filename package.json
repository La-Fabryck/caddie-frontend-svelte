{
	"name": "caddie-frontend-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "concurrently -n \"VITE,SVELTE-CHECK\" -c \"blue,green\" \"npm run dev:vite\" \"npm run dev:watch\"",
		"dev:vite": "vite dev",
		"dev:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"format": "npm run format:svelte && npm run format:eslint",
		"format:svelte": "prettier --write \"**/*.svelte\"",
		"format:eslint": "eslint --fix .",
		"lint": "npm run lint:svelte && npm run lint:eslint",
		"lint:svelte": "prettier --check \"**/*.svelte\"",
		"lint:eslint": "eslint .",
		"test": "npm run test:unit -- --run"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@lucide/svelte": "^0.553.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.14",
		"@types/node": "^22",
		"@vitest/browser-playwright": "^4.0.5",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"lucide-svelte": "^0.553.0",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.4",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.14",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.5",
		"vitest-browser-svelte": "^2.0.1"
	}
}
